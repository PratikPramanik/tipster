<h1>Listing tips</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Address</th>
    <th>Tip</th>
    <th>Contact</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tips.each do |tip| %>
  <tr>
    <td><%= tip.subject %></td>
    <td><%= tip.address %></td>
    <td><%= tip.tip %></td>
    <td><%= tip.contact %></td>
    <td><%= link_to 'Show', tip %></td>
    <td><%= link_to 'Edit', edit_tip_path(tip) %></td>
    <td><%= link_to 'Destroy', tip, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

